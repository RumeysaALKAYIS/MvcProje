@model CreateUserModel
@{
    ViewData["Title"] = "Create User";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center">@ViewData["Title"]</h1>
      
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="NameSurname" class="form-label">FullName</label>
                <input asp-for="NameSurname" class="form-control" placeholder="" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="" />
               <span asp-validation-for="Password" class="text-danger" ></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label">Re- Password</label>
                <input asp-for="RePassword" type="password" class="form-control" placeholder="" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                
                <select asp-for="Role" class="form-control">
                    <option value="">Please Select</option>
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                </select>
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
              <div class="form-check">
                  <input class="form-chechk-input" type="checkbox" asp-for="Locked" />
                  <label class="form-check-label" asp-for="Locked">Locked</label>

              </div>
            </div>

             <div class="form-group d-grid mb-3">
               <button type="submit" class="btn btn-primary d-block">Save</button>
            </div>


        </form>

    </div>
</div>